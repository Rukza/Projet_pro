{% extends 'admin/base.html.twig' %}
{% block title %}Administration{% endblock %}

{% block body %}
<div class="container-fluid ">

    <h1 class="my-5">Gestion des demandes de liaison</h1>
    <table class="table table-striped table-hover text-center">

        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Demander par</th>
                <th>Pour le bracelet</th>
                <th>Appartenant a </th>
                <th>Accepté</th>
                <th>Refusé</th>
                <th>Bloqué</th>
                <th><a href="{{ path('admin_requests_add') }}" class="btn btn-success"><i class="fas fa-plus-circle"></i> Liaison</a></th>

            </tr>
        </thead>
        <tbody>
            {% for Requested in requests %}
            <tr>
                <td>{{Requested.id}}</td>
                <td>{{Requested.requestedBy.fullName}}</td>
                <td>{{Requested.requestedFor.wristlettitle}}</td>
                <td>{{Requested.requestedFor.mother.fullName}}</td>
                <td>{{Requested.requestedAccepted|replace({ (1): "X" })}}</td>
                <td>{{Requested.requestedRefused|replace({ (1): "X" })}}</td>
                <td>{{Requested.requestedBanned|replace({ (1): "X" })}}</td>
                <td>
                    <a href="{{path('admin_requests_edit', {'id':Requested.id})}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="{{path('admin_requests_delete', {'id':Requested.id})}}" class="btn btn-danger"><i
                            class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}