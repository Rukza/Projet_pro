{% extends 'admin/base.html.twig' %}
{% block title %}Administration{% endblock %}

{% block body %}
<div class="container-fluid">

    <h1 class="my-5">Gestion des personnes portant un bracelet</h1>
    <table class="table table-striped table-hover text-center">

        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Nom Pr√©nom</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Nom du bracelet</th>
                <th><a href="{{ path('admin_weared_add') }}" class="btn btn-success"><i class="fas fa-plus-circle"></i> Porteur</a></th>

            </tr>
        </thead>
        <tbody>
            {% for wearedRepo in weareds %}
            <tr>
                <td>{{wearedRepo.id}}</td>
                <td>{{wearedRepo.fullName}}</td>
                <td>{{wearedRepo.adress}}</td>
                <td>{{wearedRepo.postalcode}}</td>
                <td>{{wearedRepo.city}}</td>
                <td>{{wearedRepo.wearWristlet.wristletTitle}}</td>
                

                <td>
                    <a href="{{path('admin_weared_edit', {'id':wearedRepo.id})}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="{{path('admin_weared_delete', {'id':wearedRepo.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}