{% extends 'admin/base.html.twig' %}
{% block title %}Administration{% endblock %}

{% block body %}
<div class="container-fluid">

    <h1 class="my-5">Gestion des utilisateurs</h1>
    <table class="table table-striped table-hover text-center">

        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Password</th>
                <th>Etat du compte</th>
                <th>Role</th>
                <th><a href="{{path('admin_user_add')}}" class="btn btn-success"><i class="fas fa-plus-circle"></i> Utilisateur</a></th>

            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{user.id}}</td>
                <td>{{user.firstname}}</td>
                <td>{{user.lastname}}</td>
                <td>{{user.email}}</td>
                <td>{{user.pswd}}</td>
                <td>{{user.active|replace({ (1): "Vérifié" })}}</td>
                 {% for Role in user.userRoles %}
                 <td>{{ Role.title }}</td>
                {% endfor %}

                <td>
                    <a href="{{path('admin_user_edit', {'id':user.id})}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href=" {{path('admin_user_delete', {'id':user.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}