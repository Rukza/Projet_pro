{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}



    {{ form_start(form)}}

    <div class="row mt-5 ml-2 mr-2">
        <div class="col-md-6">
            <div class="jumbotron bg-light ">
                <h2 class="alert-heading">Informations générales</h2>
                <hr>
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.email) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="jumbotron bg-light ">
                <h2 class="alert-heading">
                    Mot de passe
                </h2>
                <hr>
                {{form_row(form.pswd)}}
                {{form_row(form.pswdConfirm)}}

            </div>
            
        </div>
        <div class="col-md-12">
        {{form_row(form.checkConsent)}}

            <button class="btn btn-primary"> confirmez l'Inscription

            </button>
            </div>
    </div>



{{ form_end(form)}}


{% endblock %}