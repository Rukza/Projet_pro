{% extends '/account/mother/base.html.twig' %}
{% block title %}Administration{% endblock %}

{% block body %}
<div class="container-fluid">

    <h1 class="my-5">Gestion des personnes portant vos bracelets</h1>
    <table class="table table-striped table-hover text-center">

        <thead class="thead-light">
            <tr>

                <th>Nom du bracelet</th>
                <th>Porteur</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>

                <th>
                    <a href="{{path ("mother_weared_add")}}" class="btn btn-success pull-right"><i
                            class="fas fa-plus-circle"></i>
                        Ajouter un porteur de bracelet</a>
                </th>
            </tr>

        </thead>
        <tbody>

            {% for wear in wears %}

            <tr>


                <td>{{wear.wearWristlet}}</td>
                <td>{{wear.fullName}}</td>
                <td>{{wear.adress}}</td>
                <td>{{wear.postalCode}}</td>
                <td>{{wear.city}}</td>
                <td>
                    <div class="text-center">
                        <a href="{{path("mother_weared_edit", {'id':wear.id})}}" class="btn btn-primary"><i
                                class="fas fa-edit"></i></a>
                        <a href=" {{path("mother_weared_delete", {'id':wear.id})}}" class="btn btn-danger"><i
                                class="fas fa-trash"></i></a>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}