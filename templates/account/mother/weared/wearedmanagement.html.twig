{% extends '/account/mother/base.html.twig' %}
{% block title %}Administration{% endblock %}

{% block body %}
<div class="container-fluid">

    <h1 class="my-5">Gestion des utilisateurs de vos bracelets</h1>
    <table class="table table-hover jumbotron bg-light">

        <thead>
            <tr>
                <th>Nom du bracelet</th>
                <th>Porteur</th>

                <th>Adresse</th>

                <th><a href="{{path ("mother_weared_add")}}" class="btn btn-success"><i class="fas fa-plus-circle"></i>
                        Ajouter un porteur de bracelet</a></th>

            </tr>
        </thead>
        <tbody>
            {% for wear in wears %}

            <tr>
                
                <td>{{wear.wearWristlet}}</td>
                <td>{{wear.fullName}}</td>
                <td>{{wear.fullAdress}}</td>


                <td>
                    <a href="{{"#"}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href=" {{"#"}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}