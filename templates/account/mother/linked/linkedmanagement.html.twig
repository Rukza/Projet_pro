{% extends '/account/mother/base.html.twig' %}
{% block title %}Administration{% endblock %}

{% block body %}
<div class="container-fluid">

    <h1 class="my-5">Gestion des liaisons de vos bracelets</h1>
    <table class="table table-striped table-hover text-center">

        <thead class="thead-light">
            <tr>
                <th>Demander par</th>
                <th>Pour le bracelet</th>
                <th>Accepté</th>
                <th>Refusé</th>
                <th>Bloqué</th>
            </tr>
            <div class="text-right mr-4">
            </div>

        </thead>
        <tbody>

            {% for requested in requests %}

            <tr>

                <td>{{requested.requestedBy}}</td>
                <td>{{requested.requestedFor}}</td>
                <td>{{requested.requestedAccepted|replace({ (1): "X" })}}</td>
                <td>{{requested.requestedRefused|replace({ (1): "X" })}}</td>
                <td>{{requested.requestedBanned|replace({ (1): "X" })}}</td>
                
                <td>
                    <div class="text-center">
                        <a href="{{path("mother_linked_edit",{'id': requested.id} )}}" class="btn btn-primary"><i
                                class="fas fa-edit"></i></a>
                        <a href=" {{path("mother_linked_delete",{'id': requested.id} )}}" class="btn btn-danger"><i
                                class="fas fa-trash"></i></a>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}