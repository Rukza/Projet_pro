{% extends 'base.html.twig' %}

{% block title %}Nomé un bracelet{% endblock %}

{% form_theme form _self %}

{% block body %}
<div class="container">
    <div class="row jumbotron bg-light mt-5">
        <div class="col-md-12">
            
                <h1 class="my-5">Veuillez donner un nom à votre bracelet</h1>

                {{form_start(form)}}

                <div class="row">
                    <div class="col">
                        <div>

                            {{form_widget(form)}}
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check"></i>
                                Enregistrer les Modifications
                            </button>
                    {{form_end(form)}}

                        </div>
                    </div>
</div>
               
            </div>
        </div>
    </div>

    {% endblock %}