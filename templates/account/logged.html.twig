{% extends 'base.html.twig' %}

{% block title %}profile {{app.user.email}}{% endblock %}
{% block body %}

<div class="container text-center">
    <h1 class="my-5">Profile de {{app.user.FullName}}</h1>
    <div class="row">
        <div class="col-md-12 mt-3">
            <div class="jumbotron bg-light">
                <h4>Modifier les données du compte</h4>
                <hr>

                <a href="{{ path('account_profile') }}">Modfier votre profil</a>
                <br>
                <a href="{{ path('account_updatepswd') }}">Modfier votre mot de passe</a>
                <br>
                
               
                <br>

                <h4>Acceder au fonction du bracelet</h4>
                <hr>

                <a href="{{ path('account_link') }}">Gérer les bracelet du compte</a>
                <br>
                <a href="{{ path('account_cardio') }}">Voir les bracelets lier au compte</a>
<br>
                 {% if is_granted('ROLE_ADMIN') %}
                <hr>
                <h4>Génération de code de bracelet</h4>
<br>
                <a href="{{ path('GenSerial') }}" class="btn btn-primary">Générer un nouveau numéro de série</a>
                
                
              {% endif %}
            </div>
        </div>

    </div>

</div>




{% endblock %}